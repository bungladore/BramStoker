package mrflvhead.parts{		import flash.display.Bitmap;	import flash.display.DisplayObject;	import flash.display.Sprite;	import flash.events.Event;	import flash.events.MouseEvent;	import com.bramstoker.controller.events.SoundEvent;		public class PauseButton extends Sprite	{				private var _toggle_me:Boolean= true;		private var _btn_container:Sprite;		private var _pause_btn:Sprite;		private var _play_btn:Sprite;				public function PauseButton(pause_btn:DisplayObject, play_btn:DisplayObject)		{			super();						_pause_btn = new Sprite();			_pause_btn.addChild(pause_btn);			_pause_btn.visible = true;			_play_btn = new Sprite();			_play_btn.addChild(play_btn);			_play_btn.visible = false;			addChild(_play_btn);			addChild(_pause_btn);			//_btn_container = new Sprite();			//_btn_container.addChild(_play_btn);			//_btn_container.addChild(_pause_btn);			//addChild(_btn_container);			_play_btn.addEventListener(MouseEvent.CLICK, play, false, 0, true);			_pause_btn.addEventListener(MouseEvent.CLICK, pause, false, 0, true);			//_btn_container.buttonMode = true;		}				public function pause(e:MouseEvent = null):void		{			dispatchEvent(new Event("VIDEO_PAUSED"));			dispatchEvent(new Event("USER_PAUSED", true));			_play_btn.visible = true;			_pause_btn.visible = false;			dispatchEvent(new SoundEvent(SoundEvent.MAKE_SOUND, true));			//_toggle_me = false;		}				public function play(e:MouseEvent = null):void		{			dispatchEvent(new Event("VIDEO_UNPAUSED"));			dispatchEvent(new Event("USER_UNPAUSED", true));			_play_btn.visible = false;			_pause_btn.visible = true;			dispatchEvent(new SoundEvent(SoundEvent.MAKE_SOUND, true));			//_toggle_me = true;		}	}}