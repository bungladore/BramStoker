package mrflvhead.parts{	//Pause controls give the abstract flv player a play and pause functionality	import flash.display.Sprite;	import flash.events.MouseEvent;	import flash.display.Bitmap;	import flash.events.Event;		public class StopButton extends Sprite	{				private var _stop_btn:Bitmap;		private var _btn_container:Sprite;				public function StopButton(stop_btn:Bitmap) {						super();						_btn_container = new Sprite();			addChild(_btn_container);						_stop_btn = stop_btn;			_btn_container.addChild(stop_btn);						_btn_container.addEventListener(MouseEvent.CLICK, stopVideo, false, 0, true);			_btn_container.buttonMode = true;		}		private function stopVideo(e:MouseEvent = null):void		{			dispatchEvent(new Event("stopVideo"));		}	}}