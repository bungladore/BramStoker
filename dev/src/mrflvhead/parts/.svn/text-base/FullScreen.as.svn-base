package mrflvhead.parts{	//Pause controls give the abstract flv player a play and pause functionality	import flash.display.Sprite;	import flash.display.MovieClip;	import flash.events.MouseEvent;	import flash.geom.Rectangle;		public class FullScreen extends MovieClip{				private var decorated:Sprite;		private var full_screen:MovieClip;		private var toggle_me:Boolean = true;				public function FullScreen(flv:Sprite) {			//attach the video player			decorated = flv;			//add the play pause toggle controls			full_screen = new FSBtn();			full_screen.addEventListener(MouseEvent.CLICK, fsToggle, false, 0, true);			addChild(full_screen);					}		private function fsToggle(e:MouseEvent){			if(toggle_me){				//stage.fullScreenSourceRect = new Rectangle(0,0,stage.width,stage.height);				stage.displayState = "fullScreen";				toggle_me = false;				full_screen.gotoAndStop(2);			}else{				//stage.fullScreenSourceRect = null;				stage.displayState = "normal";				full_screen.gotoAndStop(1);				toggle_me = true;			}		}	}}