package com.bramstoker.controller.events
{
	import flash.events.Event;
	
	public class NavigationEvent extends Event
	{
		private static const NAME:String = "Navigation_";
		public static const SHOW_HELP:String = NAME + "SHOW_HELP";
		public static const SHOW_CREDITS:String = NAME + "SHOW_CREDITS";
		public static const CLOSE_CREDITS:String = NAME + "CLOSE_CREDITS";
		public static const CLOSE_HELP:String = NAME + "CLOSE_HELP";
		public static const RESET:String = NAME + "RESET";
		
		public function NavigationEvent(type:String, bubbles:Boolean=false, cancelable:Boolean=false)
		{
			super(type, bubbles, cancelable);
		}
	}
}